<?php

/**
 * @file
 * Contains bhavesh.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bhavesh_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bhavesh module.
    case 'help.page.bhavesh':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('My Awesome Module') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function bhavesh_theme() {
  return [
    'bhavesh' => [
      'render element' => 'children',
    ],
  ];
}
